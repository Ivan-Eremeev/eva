extends core/base.pug

block title 
  title Главная

block content

  .page 

    include core/header.pug

    .content 

      // welcome
      section.welcome#welcomeVideo
        .wrapper 
          .welcome__container 
            h1.welcome__title.title безопасное инвестирование в криптовалюту
            .welcome__content 
              .welcome__text Торгуйте на SPOT только самыми надежными крипто-монетми и получайте прибыль от 4 до 8% в месяц.
              .welcome__btn
                a(href="#").btn Подробнее
                  img(src="img/link_arrow.svg", alt="")
      // /welcome

      // advantages
      section.advantages
        .wrapper 
          h2.advantages__title.title Инвестиции в криптовалюту – это безопасно, выгодно и популярно
          .advantages__items 
            .row 
              .advantages__col 
                .advantages__item 
                  .advantages__icon 
                    img(src="img/advantages_icon-1.svg", alt="")
                  .advantages__content 
                    .advantages__subtitle Децентрализация
                    .advantages__text Отсутствие регуляции со стороны государства и банков
              .advantages__col 
                .advantages__item 
                  .advantages__icon 
                    img(src="img/advantages_icon-2.svg", alt="")
                  .advantages__content 
                    .advantages__subtitle Скорость транзакции
                    .advantages__text Переводы по всему миру за несколько минут
              .advantages__col 
                .advantages__item 
                  .advantages__icon 
                    img(src="img/advantages_icon-3.svg", alt="")
                  .advantages__content 
                    .advantages__subtitle Анонимность
                    .advantages__text Невозможно вычислить данные отправителя и получателя криптовалюты
              .advantages__col 
                .advantages__item 
                  .advantages__icon 
                    img(src="img/advantages_icon-4.svg", alt="")
                  .advantages__content 
                    .advantages__subtitle Альтернатива
                    .advantages__text Отличный вариант инвестирования в условиях мирового кризиса
      // /advantages

      // whatget
      section.whatget
        .wrapper 
          .whatget__row 
            .whatget__content 
              h2.whatget__title.title Торгуй по стратегии проверенной временем с крипто-ботом Eva
              .whatget__text Использование роботов для торговли отличный способ инвестирования для новичков и профессионалов
            .whatget__items 
              .whatget__item 
                .whatget__item-title Торгует на SPOT секции без маржи и плечей
                .whatget__item-text Самый безопасный метод инвестирования
              .whatget__item 
                .whatget__item-title Самый безопасный метод инвестирования
                .whatget__item-text От 2 до 8% в месяц, в зависимости от фазы рынка
              .whatget__item 
                .whatget__item-title Получайте прибыль 24/7
                .whatget__item-text Крипто рынок работает в выходные и праздничные дни
              .whatget__item 
                .whatget__item-title Полностью автоматизирован
                .whatget__item-text Вам не требуется знаний стратегий и принципов торговли
              .whatget__item 
                .whatget__item-title Проверенная стратегия
                .whatget__item-text Eva использует авторские индикаторы для входа в сделки
              .whatget__item 
                .whatget__item-title Диверсификация
                .whatget__item-text Робот торгует одновременно несколькими крипто-монетами
              
          // callback
          .callback
            .callback__container 
              .callback__inner 
                .callback__title Оставить заявку на звонок
                .callback__text Оставте заявку, наш партнер свяжется с Вами и расскажет подробнее
                form(action="#").callback__form 
                  .row 
                    .callback__col 
                      .callback__input 
                        input(type="text", name="name" maxlengh="30" required)
                        .callback__label Ваше имя
                    .callback__col 
                      .callback__input 
                        input(type="text", name="tel" required)
                        .callback__label Ваш телефон
                    .callback__col.callback__col--btn
                      button(type="submit").callback__btn.btn Отправить
                        img(src="img/link_arrow.svg", alt="")
                .callback__ps Оставляя завку, Вы соглашаетесь на 
                  a(href="#") политику обработки персональной информации
          // /callback

      // /whatget

    include core/footer.pug
